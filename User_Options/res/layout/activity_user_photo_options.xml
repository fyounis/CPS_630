<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".UserPhotoOptions" >

    <Button
        android:id="@+id/camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="184dp"
        android:background="@drawable/camera2"
        android:onClick="TakePictureFromCamera"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/camera"
        android:layout_below="@+id/camera"
        android:layout_marginTop="61dp"
        android:background="@drawable/gallery2"
        android:onClick="TakePictureFromGallery"
        tools:ignore="HardcodedText" />

</RelativeLayout>