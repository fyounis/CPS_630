<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".UserPhotoOptions" >

    <ImageButton
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="107dp"
        android:text="From camera"
        android:background="@drawable/fromcameraselector"
        android:onClick="TakePictureFromCamera"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignRight="@+id/button1"
        android:layout_below="@+id/button1"
        android:layout_marginTop="107dp"
        android:text="From gallery"
        android:background="@drawable/fromgalleryselector"
        android:onClick="TakePictureFromGallery"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/customfont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="#747170"
        android:textSize="30sp"
        android:text="Choose a photo from:" />

</RelativeLayout>